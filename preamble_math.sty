\tcbset{
	theoremstyle/.style={
			enhanced,
			parbox=false,
			sharp corners,
			boxrule=0pt,
			left=1em,
			top=0.5em,
			bottom=0.5em,
			toptitle=0.25em,
			bottomtitle=0.25em,
			separator sign={\   $\blacktriangleright$},
			coltitle=black,
			fonttitle=\bfseries,
		},
}

% theorem
\newtcbtheorem[
	number within=subsection,
	list inside=thms,
]{theorem}{Theorem}{
	theoremstyle,
	colback=red!10!white,
	colframe=red!20!white,
	borderline west={0.25em}{0pt}{red},
	label type=theorem,
}{thm}

% corollary
\newtcbtheorem[
	number within=tcb@cnt@theorem,
]{corollary}{Corollary}{
	theoremstyle,
	colback=yellow!10!white,
	colframe=yellow!20!white,
	borderline west={0.25em}{0pt}{yellow},
	label type=corollary,
}{cor}

