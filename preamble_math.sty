\RequirePackage{amsthm}    % for theorem styles
\RequirePackage{tcolorbox} % for boxes around theorems

\newcommand{\theoremlist}{
	\tcblistof[\section*]{thms}{List of Theorems}
	\tcblistof[\section*]{defs}{List of Definitions}
}

